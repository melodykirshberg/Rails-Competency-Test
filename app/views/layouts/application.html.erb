<!DOCTYPE html>
<html>
  <head>
    <title>News Article</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class= "header">
      <div><a class="page-title" href="/"> Articles </a></div>
    <div>
      <% if current_page?(root_path) %>
        <%= article_helper %>
      <% elsif current_page?(dashboards_path) %>
        <%= dash_helper %>
      <% end %>
      <%= login_helper %>
    </div><br />
    <p class="notice"><%= notice %></p><br />
  </div>  
  <%= yield %><br />
  </body>
</html>
